@model List<Filmy.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section-title">
    <h2 style="background-color: white">Available Movies</h2>
</div>

@Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary"})

<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Poster</th>
        </tr>
        @foreach (var movie in Model)
        {
    <tr>
        <td>
            <a href='@Url.Action("Edit", "Movies", new { id = movie.Id })'>@movie.Name</a>
        </td>
        <td>@movie.Genre</td>
        <td><img src="@movie.Image" width="75" height="100"/></td>
    </tr>
         }
        </thead>
</table>

